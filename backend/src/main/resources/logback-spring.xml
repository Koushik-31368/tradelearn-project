<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ============================================================
         PRODUCTION LOGGING CONFIGURATION
         - requestId from RequestCorrelationFilter (MDC)
         - gameId / userId from GameLogger (MDC)
         - Rolling files with retention policies
         - Separate error and game-event logs
         ============================================================ -->

    <!-- Console appender with colored output, requestId, and timestamps -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) [req=%X{requestId:-none}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for all logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/tradelearn.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/tradelearn.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [req=%X{requestId:-none}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Structured game-event log with all MDC fields -->
    <appender name="GAME_EVENTS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/game-events.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/game-events.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} | %-5level | %logger{0} | req=%X{requestId:-none} gameId=%X{gameId} userId=%X{userId} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Dedicated error log with full stack traces -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/errors.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/errors.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [req=%X{requestId:-none} game=%X{gameId} user=%X{userId}] - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <!-- ============================================================
         SERVICE LOGGERS (game logic â€” verbose, with game-event log)
         ============================================================ -->

    <logger name="com.tradelearn.server.service.RoomManager" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="GAME_EVENTS"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger name="com.tradelearn.server.service.MatchService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="GAME_EVENTS"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger name="com.tradelearn.server.service.MatchSchedulerService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="GAME_EVENTS"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <logger name="com.tradelearn.server.service.MatchTradeService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="GAME_EVENTS"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Socket layer (new production architecture) -->
    <logger name="com.tradelearn.server.socket" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="GAME_EVENTS"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Middleware layer -->
    <logger name="com.tradelearn.server.middleware" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Exception handler -->
    <logger name="com.tradelearn.server.exception.GlobalExceptionHandler" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="GAME_EVENTS"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- ============================================================
         FRAMEWORK LOGGERS
         ============================================================ -->

    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.data.redis" level="WARN"/>
    <logger name="io.lettuce" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.apache" level="WARN"/>

    <!-- Uncomment for DB debugging -->
    <!-- <logger name="org.hibernate.SQL" level="DEBUG"/> -->
    <!-- <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/> -->

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>
